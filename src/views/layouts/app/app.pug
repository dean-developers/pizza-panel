main
    v-navigation-drawer(
        v-model="drawer"
        absolute
        width="320px"
        temporary
        app
    )
        v-list-item
            v-list-item-content
                v-list-item-title.menu-title Pizza
        v-divider
        v-list(dense)
            v-list-item(v-for='item in menu', :key='item.name' :to='item.to')
                v-list-item-icon
                    v-icon {{ item.icon }}
                v-list-item-content
                    v-list-item-title {{$vuetify.lang.t(`$vuetify.menu.${item.name}`)}}

    v-app-bar(color='blue darken-1')
        v-app-bar-nav-icon(@click.stop="drawer = !drawer")
        v-toolbar-title.d-none.d-sm-flex.text-center.app-bar-title Pizza panel
        .actions
            v-switch(class='switch-theme')
            v-btn(color='accent').exit-btn
                v-icon mdi-exit-to-app
    v-content
        v-container.pt-5
            router-view
