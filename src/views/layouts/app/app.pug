v-app(id="inspire")
    v-navigation-drawer(
        v-model="drawer"
        temporary
        clipped
        app
    )
        v-list-item
            v-list-item-content
                v-list-item-title.menu-title Pizza
        v-divider
        v-list(dense)
            v-list-item(
                v-for="item in navigation"
                :key="item.name"
                :to="item.to"
                v-if="item.permissions.includes(type)"
            )
                v-list-item-icon
                    v-icon {{ item.icon }}
                v-list-item-content
                    v-list-item-title {{$vuetify.lang.t(`$vuetify.navigation.${item.name}`)}}

    v-app-bar(color="primary")
        v-app-bar-nav-icon(@click.stop="drawer = !drawer")
        v-toolbar-title.d-none.d-sm-flex.text-center.app-bar-title {{$vuetify.lang.t(`$vuetify.navigation.${routeName}`)}}
        .actions
            v-switch(class='switch-theme' v-model="theme")
            v-locale
            v-btn(v-if="$store.getters.loggedIn" @click="logout()" color="accent").exit-btn
                v-icon mdi-exit-to-app
    v-content
        v-container.pt-5
            router-view
